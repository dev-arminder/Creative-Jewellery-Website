extends ../base.pug

block variables
  - var template = "detail";

block content
  .detail
    .detail__wrapper
      figure.detail__media
        img.detail__media_image(alt=product.data.product.alt, src=product.data.product.url)
      
      .detail__information 
        p.detail__information_collection=product.data.collection.data.title
        h1.detail__information_title=product.data.title

        .detail__information_content
          .detail__information_highlights
            each highlight in product.data.highlights 
              p.detail__information_highlight
                svg.default__information_highlight_icon
                use(xlink:href=highlight.highlights_icon)

                | #{highlight.highlights_text}