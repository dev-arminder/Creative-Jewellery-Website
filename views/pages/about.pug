extends ../base.pug

block variables
  - var template = "about";
 
block content
  .about
    .about__wrapper
      section.about__gallery
        .about__gallery_wrapper
           each media in about.data.gallery 
             figure.about__gallery_media
               img.about__gallery_media_img(alt = media.image.alt , src = media.image.url) 
          
           each section in about.data.body
             if section.slice_type == 'title'
               h2.about__title=section.primary.text
             
             if section.slice_type == 'content'
               section.about__content
                 .about__content_wrapper
                   p.about__content_label=section.primary.label

                   .about__content__description!=PrismicDOM.RichText.asHtml(section.primary.description)

                   figure.about__content_media
                     img.about__content_media_img(alt=section.primary.image.alt, src=section.primary.image.url)
             
             if section.slice_type == 'highlight'
               section.about__highlight 
                 .about__highlight_wrapper 
                   if section.primary.label
                     p.about__highlight_label=section.primary_label
                     
                   h3.about__highlight_title=section.primary.title1
                   each media in section.items
                    figure.about__highlight_media
                      img.about__highlight_media_img(alt=media.image.alt, src=media.image.url)

                     
